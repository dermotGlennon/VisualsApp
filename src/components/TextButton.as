package components{    import components.parts.TextBase;    import fl.text.TLFTextField;    import flash.display.Sprite;    import flash.events.MouseEvent;    import flash.text.TextFormat;    import flash.ui.Mouse;    import style.FontStyle;    import flash.events.Event;    public class TextButton extends Sprite    {        /////////////////////        //// INSTANCES //////         /////////////////////        private var txtField:TLFTextField;        private var txtBase:TextBase;                /////////////////////           //// MEMBER VARS ////        /////////////////////        public var m_id:String;        public var m_coldFormat:TextFormat;        public var m_hotFormat:TextFormat;                        /////////////////////        //// STATIC VARS ////        /////////////////////                public static var BUTTON_EVENT:String = "button hit";        public function TextButton(Params:Object)        {            mouseChildren = false;            txtBase = new TextBase( Params );            m_id = Params.ID;            m_coldFormat = (Params.ColdFormat == undefined) ? FontStyle.BASE_FORMAT:Params.ColdFormat;            m_hotFormat = (Params.HotFormat == undefined) ? FontStyle.BASE_HOT_FORMAT:Params.HotFormat;            //trace("varBack:"+varBack);            addChild(txtBase);            this.addEventListener(MouseEvent.ROLL_OVER, _OverButton);            this.addEventListener(MouseEvent.ROLL_OUT, _OutButton);               this.addEventListener(MouseEvent.CLICK, _OnClick);               super();        }        public function GetWidth():Number        {            return txtBase.GetWidth();        }                public function GetHeight():Number        {            return txtBase.GetHeight();        }        private function _OverButton(e:MouseEvent):void        {           txtBase.SetFormat( m_hotFormat);           Mouse.cursor = "button";        }                private function _OutButton(e:MouseEvent):void        {            txtBase.SetFormat(m_coldFormat);            Mouse.cursor = "auto";        }        private function _OnClick(e:MouseEvent):void        {            //trace("this:" + this.name);            //m_creator.bttnHit = this.name;            dispatchEvent(new Event(TextButton.BUTTON_EVENT));        }    }}