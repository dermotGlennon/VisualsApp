package components{    import components.parts.TextBase;    import fl.text.TLFTextField;    import flash.display.Sprite;    import flash.events.MouseEvent;    import flash.ui.Mouse;    import style.FontStyle;    public class TextButton extends Sprite    {        /////////////////////        //// INSTANCES //////         /////////////////////        private var txtField:TLFTextField;        private var txtBase:TextBase;                /////////////////////           //// MEMBER VARS ////        /////////////////////        public var mID:String;        private var mTextOverColor:Number;        private var mHotUnderLine:Boolean;                /////////////////////        //// STATIC VARS ////        /////////////////////         public function TextButton(Params:Object)        {            mouseChildren = false;            SetDefaults(Params);            txtBase = new TextBase( Params );            mID = Params.ID;            addChild(txtBase);            this.addEventListener(MouseEvent.ROLL_OVER, _OverButton);            this.addEventListener(MouseEvent.ROLL_OUT, _OutButton);               this.addEventListener(MouseEvent.CLICK, _OnClick);               super();        }        public function GetWidth():Number        {            return txtBase.GetWidth();        }                public function GetHeight():Number        {            return txtBase.GetHeight();        }        private function _OverButton(e:MouseEvent):void        {           txtBase.SetFormat( FontStyle.BASE_HOT_FORMAT);           Mouse.cursor = "button";        }                private function _OutButton(e:MouseEvent):void        {            txtBase.SetFormat(FontStyle.BASE_FORMAT);            Mouse.cursor = "auto";        }        private function _OnClick(e:MouseEvent):void        {            trace("buttonClicked");        }        public function SetDefaults(Params:Object):void        {           //mTextOverColor = (Params.TextOverColor ==  undefined) ? Font.HOT_COLOR:Params.TextOverColor;           mHotUnderLine   = (Params.UnderlineOver ==  undefined) ? FontStyle.FONT_UNDERLINE:Params.UnderlineOver;                  }    }}