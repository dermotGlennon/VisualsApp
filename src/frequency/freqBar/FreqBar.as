package frequency.freqBar{    import flash.display.MovieClip;    import flash.display.Sprite;    import flash.events.Event;    import flash.geom.Point;    import org.casalib.util.DrawUtil;        public class FreqBar extends MovieClip    {       //public var mcFill:CasaMovieClip;              /////////////////////        //// INSTANCES //////        /////////////////////        private var spr_fill:Sprite;                /////////////////////        //// MEMBER VARS ////        /////////////////////        public var id:String;        private var mFillColor:Number;        private var mFillAlpha:Number;        private var mHeight:Number;        private var mWidth:Number;        private var mSpectrumH:Number;        //private var maxVal:Number   = -50;        //private var minVal:Number = -200;                          /////////////////////        //// STATIC VARS ////        /////////////////////        public function FreqBar(inObj:Object)         {            super();            spr_fill = new Sprite();            mouseChildren = false;                        id = inObj.Id;            mFillColor = inObj.Color;            mFillAlpha = inObj.Alpha;            mHeight     = inObj.Height;            mWidth     = inObj.Width;            mSpectrumH  = inObj.SpectrumHeight;            x=inObj.X;            y = inObj.Y;            addChild(spr_fill);            this.graphics.lineStyle(0, mFillColor);            DrawUtil.drawPath(this.graphics, new Array(new Point(0, 0), new Point(0, 0 - mHeight), new Point(mWidth, 0 - mHeight), new Point(mWidth, 0), new Point(0, 0)));            this.graphics.endFill();                        this.graphics.beginFill(mFillColor,mFillAlpha);            DrawUtil.drawShape(this.graphics, new Array(new Point(0, 0), new Point(0, 0 - mHeight), new Point(mWidth, 0 - mHeight), new Point(mWidth, 0)));            this.graphics.endFill();        }                public function DrawFill(MagSum:Number):void        {            var m:Number = (MagSum + 90) / 100;            var h:Number = mHeight * m;            var cH:Number   = (h < 0) ? 0:h;            spr_fill.graphics.clear();            spr_fill.graphics.beginFill(mFillColor,1 * m);            DrawUtil.drawShape(spr_fill.graphics, new Array(new Point(0, 0), new Point(0, 0 - h), new Point(mWidth, 0 - h), new Point(mWidth, 0)));            spr_fill.graphics.endFill();        }    }}