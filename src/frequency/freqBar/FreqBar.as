package frequency.freqBar{    import flash.display.MovieClip;    import flash.display.Sprite;    import flash.events.Event;    import flash.geom.Point;    import org.casalib.util.DrawUtil;        public class FreqBar extends MovieClip    {       //public var mcFill:CasaMovieClip;              /////////////////////        //// INSTANCES //////        /////////////////////        private var spr_fill:Sprite;                /////////////////////        //// MEMBER VARS ////        /////////////////////        public var id:String;        private var mFillColor:Number;        private var mFillAlpha:Number;        private var mHeight:Number;        private var mWidth:Number;        private var mSpectrumH:Number;        private var dBToPixel:Number;        //private var maxVal:Number   = -50;        //private var minVal:Number = -200;        private var BOTTOM:Number = 0;                            private  var MAX_DB:Number     = 0;        private  var MIN_DB:Number     = -60;                  /////////////////////        //// STATIC VARS ////        /////////////////////        public function FreqBar(inObj:Object)         {            super();            spr_fill = new Sprite();            mouseChildren = false;                        id = inObj.Id;            mFillColor = inObj.Color;            mFillAlpha = inObj.Alpha;            mHeight     = inObj.Height;            mWidth     = inObj.Width;            mSpectrumH  = inObj.SpectrumHeight;            x=inObj.X;            y = inObj.Y;            addChild(spr_fill);            this.graphics.lineStyle(0, mFillColor);            DrawUtil.drawPath(this.graphics, new Array(new Point(0, 0), new Point(0, 0 - mHeight), new Point(mWidth, 0 - mHeight), new Point(mWidth, 0), new Point(0, 0)));            this.graphics.endFill();                        this.graphics.beginFill(mFillColor, mFillAlpha);            DrawUtil.drawShape(this.graphics, new Array(new Point(0, 0), new Point(0, 0 - mHeight), new Point(mWidth, 0 - mHeight), new Point(mWidth, 0)));            this.graphics.endFill();        }                public function DrawFill(MagSum:Number, newH:Number):void        {            dBToPixel = newH / (MAX_DB - MIN_DB);            var newVal:Number = BOTTOM - dBToPixel * (MagSum - MIN_DB);                                       spr_fill.graphics.clear();            spr_fill.graphics.beginFill(mFillColor,.4);            DrawUtil.drawShape(spr_fill.graphics, new Array(new Point(0, 0), new Point(0, newVal), new Point(mWidth, newVal), new Point(mWidth, 0)));            spr_fill.graphics.endFill();            if (id == "Low")             {                //trace("newH:"+newH);                //trace("newVal:" + newVal );                //trace("h:" + h);                //trace("corr:" + h * pMod);                            }        }    }}